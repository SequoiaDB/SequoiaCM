<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!--this xml is for ci, please don't modify it -->
<!--testcase for function test, which can be excuted concurrently -->
<suite name="scm_sdv_serial" verbose="1" parallel="classes"
	thread-count="1">
	<parameter name="FORCECLEAR" value="false" />
	<parameter name="DATADIR" value="/tmp/ci_cm" />
	<parameter name="NTPSERVER" value="192.168.20.11" />
	<parameter name="LOCALHOSTNAME" value="localhost" />

	<parameter name="SSHUSER" value="root" />
	<parameter name="SSHPASSWD" value="jenkins" />

	<parameter name="MAINSDBURL" value="mainSiteHostName:11810" />
	<parameter name="SDBUSER" value="sdbadmin" />
	<parameter name="SDBPASSWD" value="sequoiadb" />

	<parameter name="GATEWAYS" value="GATEWAYURLS" />
	<parameter name="ROOTSITESVCNAME" value="rootsite" />
	<parameter name="SCMUSER" value="admin" />
	<parameter name="SCMPASSWD" value="admin" />
	<parameter name="SCMPASSWDPATH" value="/opt/dbuser_info" />

	<parameter name="LDAPUSER" value="ldapadmin" />
	<parameter name="LDAPPASSWD" value="admin" />
	<listeners>
		<listener class-name="com.sequoiacm.testcommon.TestScmListener" />
	</listeners>

	<test name="parralclass" preserve-order="true">
		<method-selectors>
			<method-selector>
				<script language="beanshell">
               <![CDATA[
               groups.containsKey("XXXX")||groups.isEmpty();
               ]]>
				</script>
			</method-selector>
		</method-selectors>

		<packages>
			<!-- task -->
			<package name="com.sequoiacm.net.task" />
			<package name="com.sequoiacm.net.task.concurrent" />
			<!-- asynctask -->
			<package name="com.sequoiacm.net.asynctask.serial" />
			<package name="com.sequoiacm.net.asynctask.concurrent" />
			<!--directory -->
			<package name="com.sequoiacm.net.directory.serial" />
			<!--datasource -->
			<package name="com.sequoiacm.net.datasource.serial" />
			<!--batch -->
			<package name="com.sequoiacm.net.batch.serial" />
			<!--file -->
			<package name="com.sequoiacm.scmfile.serial" />
			<!--readcachefile -->
			<package name="com.sequoiacm.net.readcachefile.serial" />
			<!--schedule -->
			<package name="com.sequoiacm.net.scheduletask" />
		</packages>
	</test>

</suite>
