<configuration scan="true" scanPeriod="60" debug="false">
    <property name="LOG_PATH" value="SCM_LOG_PATH_VALUE" />
    <property name="AUDIT_SDB_URL" value="SCM_AUDIT_SDB_URL" />
    <property name="AUDIT_SDB_USER" value="SCM_AUDIT_SDB_USER" />
    <property name="AUDIT_SDB_PASSWD" value="SCM_AUDIT_SDB_PASSWD" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/SCM_LOG_NAME_VALUE</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOG_PATH}/SCM_LOG_NAME_VALUE.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %F:%L [%thread] %-5level %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} -%msg %n</pattern>
        </encoder>
    </appender>

    <!--appender name="FILE2" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/servicetrace.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %F:%L [%thread] %-5level %msg %n</pattern>
        </encoder>
    </appender-->
    
    <!--appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %F:%L [%thread] %-5level %msg %n</pattern>
        </encoder>
    </appender-->

    <!-- set audit log to sdb -->
    <appender name="auditTOSDB" class="com.sequoiacm.infrastructure.audit.ScmAuditSequoiadbAppender">
        <url>${AUDIT_SDB_URL}</url>
        <userName>${AUDIT_SDB_USER}</userName>
        <password>${AUDIT_SDB_PASSWD}</password>
        <!-- sequoiadb connection configure -->
        <connectTimeout>10000</connectTimeout>
        <maxAutoConnectRetryTime>15000</maxAutoConnectRetryTime>
        <socketTimeout>0</socketTimeout>
        <useNagle>false</useNagle>
        <useSsl>false</useSsl>
        <!-- sequoiadb dataSource configure -->
        <maxConnectionNum>20</maxConnectionNum>
        <deltaincCount>10</deltaincCount>
        <maxIdleNum>10</maxIdleNum>
        <keepAliveTime>60000</keepAliveTime>
        <recheckCyclePeriod>30000</recheckCyclePeriod>
        <validateConnection>true</validateConnection>        
    </appender>
    <!-- set audit log to audit.log file -->
    <appender name="auditTOFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5level][%thread][%c:%L]:%msg %n</pattern>
        </encoder>
    </appender>
    <logger name="audit" additivity="false">
        <appender-ref ref="auditTOFILE"/>
        <appender-ref ref="auditTOSDB"/>
    </logger>
    <!-- set audit log to sdb end -->

    <!-- set slow log to slowlog.log file -->
    <appender name="slowlogTOFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/slowlog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${LOG_PATH}/slowlog.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5level][%thread][%c:%L]:%msg %n</pattern>
        </encoder>
    </appender>
    <logger name="slowlog" additivity="false">
        <appender-ref ref="slowlogTOFILE"/>
    </logger>
    <!-- set slow log to slowlog.log file end -->

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
