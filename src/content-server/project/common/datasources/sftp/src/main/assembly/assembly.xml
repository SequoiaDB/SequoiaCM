<assembly 
    xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>release</id>  
    <formats>
        <format>dir</format>  
    </formats>  
    
    <dependencySets>
      <!-- package sftp runtime dependencies to /lib/sftp -->
      <dependencySet>
           <useTransitiveFiltering>true</useTransitiveFiltering>
           <outputDirectory>/sftp</outputDirectory>
           <scope>runtime</scope>
           <includes>
             <include>com.jcraft:jsch</include>
             <include>com.sequoiadb:sequoiacm-content-datasource-sftp</include>
           </includes>
           
           <excludes>
                <exclude>com.sequoiadb:sequoiacm-content-common</exclude>
                <exclude>com.sequoiadb:sequoiadb-driver</exclude>
                <exclude>com.sequoiadb:sequoiacm-content-datasource-base</exclude>
           </excludes>
      </dependencySet>
      
    </dependencySets>
</assembly>
