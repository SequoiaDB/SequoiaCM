<assembly 
    xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>release</id>  
    <formats>
        <format>dir</format>  
    </formats>  
    
    <dependencySets>
      <!-- package hbase runtime dependencies to /lib/hbase -->
      <dependencySet>
        <useTransitiveFiltering>true</useTransitiveFiltering>
        <outputDirectory>/hbase</outputDirectory>
        <includes>
            <!--include>org.apache.hbase:hbase-client</include-->
            <include>com.sequoiadb:sequoiacm-content-datasource-hbase</include>
            <!--include>com.google.protobuf:protobuf-java</include!-->
        </includes>

        <excludes>
                <exclude>org.apache.hbase:hbase-client</exclude>
                <exclude>com.google.protobuf:protobuf-java</exclude>
                <!-- exclude hbase log4j -->
                <exclude>org.slf4j:slf4j-log4j12</exclude>
                <exclude>com.sequoiadb:sequoiacm-content-common</exclude>
                <exclude>com.sequoiadb:sequoiadb-driver</exclude>
                <exclude>com.sequoiadb:sequoiacm-content-datasource-base</exclude>
        </excludes>
        
      </dependencySet>
      
       <!-- package hbase system dependencies to /lib/hbase -->
      <dependencySet>
          <useProjectArtifact>false</useProjectArtifact>
          <outputDirectory>/hbase</outputDirectory>
          <scope>system</scope>
          <includes>
            <include>jdk.tools:jdk.tools</include>
          </includes>
      </dependencySet>
      
    </dependencySets>
</assembly>
