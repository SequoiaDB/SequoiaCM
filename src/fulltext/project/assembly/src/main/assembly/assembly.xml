<assembly 
    xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

     <id>${project.version}-release</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>  

    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- copy tools/bin -->
        <fileSet>
            <directory>${project.basedir}/../common/fulltext-tools/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>


        <fileSet>
            <directory>
                ${project.basedir}/../common/fulltext-es-client/6.3/target/sequoiacm-fulltext-es-client-6.3-${project.version}-release/6.3
            </directory>
            <outputDirectory>jars/es-client-6.3</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>
                ${project.basedir}/../common/fulltext-es-client/8.2/target/sequoiacm-fulltext-es-client-8.2-${project.version}-release/8.2
            </directory>
            <outputDirectory>jars/es-client-8.2</outputDirectory>
        </fileSet>


        <fileSet>
            <directory>${project.basedir}/../../script/</directory>
            <includes>
                <include>deploy.py</include>
                <include>deploy.json</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>

    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>jars</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
</assembly>
