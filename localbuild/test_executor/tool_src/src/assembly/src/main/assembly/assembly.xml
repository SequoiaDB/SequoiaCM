<assembly
        xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- copy scmtest.py -->
        <fileSet>
            <directory>${project.basedir}/../../script/</directory>
            <includes>
                <include>scmtest.py</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <!-- copy config file -->
        <fileSet>
            <directory>${project.basedir}/../../script/</directory>
            <excludes>
                <exclude>scmtest.py</exclude>
            </excludes>
            <outputDirectory>/conf</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>jars</outputDirectory>
            <includes>
                <include>com.sequoiadb:sequoiacm-testng-listener</include>
                <include>com.sequoiadb:sequoiacm-test-executor-tool</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
